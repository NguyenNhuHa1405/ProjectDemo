@model IList<CartItemModel>
@{
    ViewBag.Title = "Giỏ hàng";
    var stt = 0;
}

<div>
    <div>
        <h2>Giỏ hàng</h2>
        <hr>
    </div>
    <div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Sản phẩm</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var p in Model) {
                    if(p.Product != null) {
                        <tr>
                            <td>@(++stt)</td>
                            <td>@p.Product.Name</td>
                            <td>@((p.Product.Price).ToString("n0")) VND</td>
                            <td>@p.Quantity</td>
                            <td>@((p.Product.Price * p.Quantity).ToString("n0")) VND</td>
                        </tr>
                    }
                }
                
            </tbody>
        </table>
    </div>
</div>